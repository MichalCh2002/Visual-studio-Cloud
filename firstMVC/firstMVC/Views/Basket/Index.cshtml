@model IEnumerable<firstMVC.Models.BasketModel>


<h1>@ViewBag.title</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produkt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaKs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaCelkem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produkt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CenaKs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CenaCelkem)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
        <tr>
            <td>
                <a asp-action="Add">Přidat zboží</a>
            </td>
        </tr>
    </tbody>

</table>
